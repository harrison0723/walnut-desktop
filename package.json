{
  "name": "Walnut",
  "version": "1.0.5",
  "main": "src/electron.js",
  "scripts": {
    "dev": "ELECTRON_ENV=development ./node_modules/.bin/electron .",
    "build": "./node_modules/.bin/electron-builder build electron-builder -mw",
    "deploy": "./node_modules/.bin/electron-builder build electron-builder -mw -p always"
  },
  "dependencies": {
    "electron-updater": "^4.0.5",
    "electron-window-state": "^5.0.3",
    "is-online": "^8.0.0"
  },
  "devDependencies": {
    "electron": "^3.0.11",
    "electron-builder": "^20.38.2"
  },
  "build": {
    "productName": "Walnut",
    "artifactName": "${productName}-${version}.${ext}",
    "appId": "com.veronode.walnut",
    "files": [
      "node_modules/**/*",
      "src/electron.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": {
      "provider": "github",
      "owner": "harrison0723",
      "repo": "walnut-desktop",
      "releaseType": "release"
    }
  }
}
